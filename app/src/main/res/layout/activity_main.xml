<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/capturePhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="417dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/selectPicBtn"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_below="@+id/capturePhotoImageView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_buttons"
        android:text="Select The Photo"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/predictPicBtn"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_below="@+id/selectPicBtn"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_buttons"
        android:text="Predict"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/predictPicBtn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="40dp"
        android:text="Result"
        android:textSize="20dp"
        android:textColor="#A14F6B"
        android:textStyle="bold" />


</RelativeLayout>